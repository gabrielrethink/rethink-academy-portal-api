model User {
  id      String   @id @default(uuid())
  email   String   @unique
  name    String?
  surname String?
  // role    Roles?   @default(STUDENT)
  role    String?  

  profile Profile?
  note Note[] 

  @@map("user") 
}

model Note {
  id      String   @id @default(uuid())
  title   String?
  content String?
  // categories Json?
  createdAt DateTime @default(now())
  categories String?
  isPublic Boolean @default(false)
  user   User    @relation(fields: [userId], references: [id])
  userId String 

  @@map("note")
}

model Profile {
  id     String  @id @default(uuid())
  bio    String?
  avatar String?
  // social Json?
  social String?
  user   User    @relation(fields: [userId], references: [id])
  userId String  @unique

  @@map("profile")
}

model Trail {
  id      String   @id @default(uuid())
  name    String   @unique
  description String
  
  @@map("trail")
}
