model User {
  id      String   @id @default(uuid())
  email   String   @unique
  name    String?
  surname String?
  role    String
  profile Profile?

  @@map("user")
}

model Profile {
  id     String  @id @default(uuid())
  bio    String?
  avatar String?
  // social Json?
  social String?
  user   User    @relation(fields: [userId], references: [id])
  userId String  @unique

  @@map("profile")
}

model Trail {
  id      String   @id @default(uuid())
  name    String   @unique
  description String
  course Course?
  
  @@map("trail")
}

model Course {
  id String @id @default(uuid())
  name String
  description String
  // level Levels
  workload Int
  teacher String
  learning String
  Skills String
  trail   Trail    @relation(fields: [trailId], references: [id])
  trailId String  @unique
}
