//   RETHINKER
// }

model Profile {
  id     String  @id @default(uuid())
  bio    String?
  avatar String?
  // social Json?
  social String?
  user   User    @relation(fields: [userId], references: [id])
  userId String  @unique

  @@map("profile")
}
