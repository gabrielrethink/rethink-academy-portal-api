datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id           String         @id @default(uuid())
  email        String         @unique
  name         String?
  surname      String?
  // role    Roles?   @default(STUDENT)
  role         String?        @default("STUDENT")
  profile      Profile?
  stickerNotes StickerNotes[]

  @@map("user")
}

model StickerNotes {
  id          String   @id @default(uuid())
  description String
  data        DateTime
  priority    Int      @default(3)
  user        User     @relation(fields: [userId], references: [id])
  userId      String

  @@map("stickerNotes")
}

// enum Roles {
